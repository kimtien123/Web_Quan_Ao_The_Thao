@model WebShop.Model.KhachHang
@{
    ViewBag.Title = "FormTTKH";
}

<h2>Giỏ Hàng</h2>
<a href="@Url.Action("Index", "SanPham")">Tiếp tục mua hang</a>
<div>
    @using (Html.BeginForm("CheckOut", "ShoppingCart"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thông tin mua hàng</h4>
            
            
            <div class="form-group">
                @Html.Label("Tên người nhận", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    
                    @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
                </div>
            </div>
          

            <div class="form-group">
                @Html.Label("Điện thoại", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DienThoaiKhach, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DienThoaiKhach, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Địa chỉ giao hàng", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChiKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChiKhachHang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Email", new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đặt hàng" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>





